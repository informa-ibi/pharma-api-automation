{
  "name": "pharma API automation",
  "version": "1.0.0",
  "description": "Tests for api endpoints",
  "main": "index.js",
  "author": "Citeline",
  "scripts": {
    "cucumber": "node node_modules/@cucumber/cucumber/bin/cucumber-js -f json:./report/report.json --require src/test/steps --tags @automated",
    "test": "npm run cucumber src/test/features/**/*.feature || (exit 0)",
    "report": "node report/reporterOptions.js",
    "test_report": "npm run test && npm run report"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/informa-ibi/pharma-api-automation.git"
  },
  "dependencies": {
    "chai-things": "^0.2.0",
    "informa_framework": "github:informa-pharma/informa_framework"
  }
}
